{
  "name": "iguanajs",
  "version": "1.0.0",
  "description": "Boilerplate for Express Rest APIs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "make": "tsx scripts/make",
    "prisma:schema": "cat prisma/base.prisma prisma/models/*.prisma > prisma/schema.prisma && npm run prisma:client",
    "prisma:client": "rm -rf prisma/generated && npx prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:reset:dev": "npx prisma migrate reset",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:refresh": "bash scripts/refresh-postgres.sh",
    "db:info": "docker ps --format \"ntable {{.ID}}\\t{{.Names}}\\t{{.Image}}\\t{{.Ports}}\"",
    "openapi:build": "tsx scripts/openapi-build",
    "features": "tsx scripts/list-features",
    "build": "tsup",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:types": "tsc --noEmit",
    "test:unit": "jest src/features",
    "test:api": "jest tests/api/smoke"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "axios": "^1.6.0",
    "axios-retry": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.17.2",
    "pino": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.5.6",
    "@types/prompts": "^2.4.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "chai": "^6.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "fast-glob": "^3.3.3",
    "jest": "^30.2.0",
    "prettier": "^3.7.3",
    "prisma": "^7.3.0",
    "prompts": "^2.4.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2"
  }
}
